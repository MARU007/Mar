#include <stdio.h>
#include <stdlib.h>
#define N 100
#include <time.h>
void wzor (int A[N],int B[N], int n){
    int i;
    B[n]=0;
    for(i=0; i<=n; i++){
        if(i%2==1){
            B[n]-=A[i];
             printf(" \n  \t\t%d\n", A[i]);
        }
        else if(i%2==0 || i==0){
            B[n]+=A[i];
             printf(" \n\t\t\t\t%d\n", A[i]);
        }
    }
    printf("   \t\t \t\t\t %d", B[n]);

}

int main()
{   int B[N], A[N], n, i;
    printf("WZÃ“R B[i]=a[0]-a[1]+a[2]-...a[i]\n Podaj i\n");
    scanf("%d",&n);
    srand(time(NULL));
    for (i=0; i<100; i++){
        A[i]=rand()%11;
        printf("\t%d", A[i]);
    }


   wzor(A,B,n);
    return 0;
}
