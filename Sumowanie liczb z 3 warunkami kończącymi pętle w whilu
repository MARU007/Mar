#include <stdio.h>
#include <stdlib.h>

int main()
{   int a=0, b=0, c=0, liczba,r=0;


    while (a<100 && b<10 && c<1){       //rzy warunki
    printf("Podaj liczbe!\n");
    scanf("%d", &liczba);
    a=a+liczba;                 // 1
    if (liczba<0){              // 2
        b++;
    }
    if (liczba==r){             //3
        c++;
    }
    r=liczba;
    //printf("%d\n", r);
    }
    return 0;
}
