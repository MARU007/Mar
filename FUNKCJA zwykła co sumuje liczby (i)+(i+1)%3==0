#include <stdio.h>
#include <stdlib.h>

void liczba(int tab[20]){
    int i, sum=0;
//printf("%d", tab[2]);
for (i=0; i<20; i++){
    if((tab[i]+tab[i+1])%3==0){
        sum+=tab[i];
            printf("%d\n", tab[i]);
    }

}

}
int main()
{   int tab [20], i;
    printf("Tworzenie tablicy\n\n\n");
    for (i=0; i<20; i++){
        tab[i]=i;
    }

    liczba(tab);
    return 0;
}
