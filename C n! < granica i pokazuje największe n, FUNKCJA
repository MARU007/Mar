C
#include <stdio.h>
#include <stdlib.h>
int sil2(int x){
        int i, silnia=1, d;
        for(i=1;i<=x;i++){
        if (silnia < x){
        silnia=silnia*i;
        printf("\t%d\n", silnia);
            if(silnia>=x){
              d=i-1;
              return d;
            }
        }
        }
        printf("", i);
        return 0;
}
int main()
{   int gr, d;
    printf("Podaj granice \n");
    scanf("%d", &gr);
    d=sil2(gr);
    printf("%d",d);

    return 0;
}
